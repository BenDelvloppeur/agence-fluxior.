---
import Container from "../ui/Container.astro";
import { ArrowRight, Play } from "lucide-react";
import { Reveal, StaggerContainer, StaggerItem } from "../ui/Motion";
import { InfiniteMarquee } from "../ui/InfiniteMarquee";

const TECHNOLOGIES = [
  { name: "Astro", color: "bg-orange-500" },
  { name: "React", color: "bg-blue-400" },
  { name: "Tailwind", color: "bg-cyan-400" },
  { name: "TypeScript", color: "bg-blue-600" },
  { name: "Framer Motion", color: "bg-purple-500" },
  { name: "Vercel", color: "bg-black" },
  { name: "Next.js", color: "bg-white" },
  { name: "Node.js", color: "bg-green-500" },
];
---

<section class="relative pt-32 pb-20 md:pt-48 md:pb-32 overflow-hidden min-h-[90vh] flex items-center">
  <!-- Background Effects (Local) -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
     <!-- Noise Texture -->
    <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 brightness-100 contrast-150"></div>
  </div>

  <Container className="relative z-10 text-left">
    <!-- Badge -->
    <Reveal client:load direction="down" delay={0.1} className="flex justify-start mb-8">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-surfaceHighlight/50 border border-white/10 backdrop-blur-md text-xs font-medium text-primary cursor-default hover:border-primary/30 transition-colors shadow-lg shadow-primary/5">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
        </span>
        Agence Web Haute Performance
      </div>
    </Reveal>

    <!-- Title -->
    <Reveal client:load delay={0.2} className="mb-8">
      <h1 class="text-6xl md:text-8xl lg:text-9xl font-display font-bold tracking-tight leading-[0.9]">
        L'Art du <br class="hidden md:block" />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-white via-white to-gray-500">Digital Premium.</span>
      </h1>
    </Reveal>

    <!-- Subtitle -->
    <Reveal client:load delay={0.6} className="mb-12 flex justify-start">
      <p class="text-lg md:text-xl text-gray-400 max-w-2xl leading-relaxed">
        Nous transformons votre vision en une expérience digitale inoubliable.
        Sites web ultra-rapides, design immersif et stratégies de conversion pour les entreprises qui visent l'excellence.
      </p>
    </Reveal>

    <!-- CTAs -->
    <StaggerContainer client:load delay={0.8} className="flex flex-col sm:flex-row items-start justify-start gap-6">
      <StaggerItem>
        <a href="/start" class="w-full sm:w-auto px-8 py-4 bg-white text-black font-bold rounded-lg hover:bg-gray-200 transition-all flex items-center justify-center gap-2 group shadow-[0_0_20px_-5px_rgba(255,255,255,0.3)] hover:scale-105 active:scale-95">
          Parler de mon projet
          <ArrowRight class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
        </a>
      </StaggerItem>
      <StaggerItem>
        <a href="/realisations" class="w-full sm:w-auto px-8 py-4 bg-transparent border border-white/20 text-white font-medium rounded-lg hover:bg-white/5 hover:border-white/40 transition-all flex items-center justify-center gap-2 backdrop-blur-sm hover:scale-105 active:scale-95">
          Voir nos réalisations
          <Play class="w-4 h-4 fill-white" />
        </a>
      </StaggerItem>
    </StaggerContainer>

    <!-- Tech Marquee -->
    <Reveal client:load delay={1} width="100%" className="mt-24 pt-10 border-t border-white/5 w-full overflow-hidden">
      <div class="flex flex-col">
        <p class="text-sm text-gray-500 font-medium mb-8 uppercase tracking-widest">Propulsé par les meilleures technologies</p>
        
        <div class="relative w-full overflow-hidden mask-image-gradient">
            <InfiniteMarquee client:load speed={30} className="w-full">
                {TECHNOLOGIES.map((tech) => (
                    <span key={tech.name} class="text-xl font-bold text-white/50 flex items-center gap-3 whitespace-nowrap hover:text-white transition-colors">
                        <div class={`w-2 h-2 ${tech.color} rounded-full shadow-[0_0_10px_rgba(255,255,255,0.3)]`}></div> 
                        {tech.name}
                    </span>
                ))}
            </InfiniteMarquee>
             <div class="absolute inset-y-0 left-0 w-20 bg-gradient-to-r from-background to-transparent z-10"></div>
             <div class="absolute inset-y-0 right-0 w-20 bg-gradient-to-l from-background to-transparent z-10"></div>
        </div>
      </div>
    </Reveal>
  </Container>
</section>
